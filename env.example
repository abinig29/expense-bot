# Telegram Bot Token (get this from @BotFather)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Optional: Set to true to enable debug logging
DEBUG=false

# Bot Settings
# Set to false to disable confirmation messages for expense additions
SEND_CONFIRMATIONS=true

# Optional: Restrict bot to specific chat IDs (comma-separated)
# Leave empty to allow all chats
ALLOWED_CHAT_IDS=

# Optional: Restrict bot to specific topic IDs (comma-separated)
# Leave empty to allow all topics
ALLOWED_TOPIC_IDS= 